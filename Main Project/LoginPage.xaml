<Page x:Class="Main_Project.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Main_Project"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="600"
      Title="LoginPage"
      Background="White">

    <Grid>

        <TextBox x:Name="textbox_login" HorizontalAlignment="Center" Margin="0,154,0,0" TextWrapping="Wrap" Text="Логин" VerticalAlignment="Top" VerticalContentAlignment="Center" FontSize="17" FontFamily="Segoe UI" Width="192" Height="51"/>
        <TextBox x:Name="textbox_password" HorizontalAlignment="Left" Margin="204,225,0,0" TextWrapping="Wrap" Text="Пароль" VerticalAlignment="Top" VerticalContentAlignment="Center" FontSize="17" FontFamily="Segoe UI" Width="192" Height="51"/>
        <Button x:Name="buttonLogin" Style="{StaticResource MainButtonTemplate}" Content="Войти" HorizontalAlignment="Center" Margin="0,321,0,0" VerticalAlignment="Top" Height="49" Width="120" FontSize="20" RenderTransformOrigin="0.483,1.367" Click="buttonLogin_Click"/>
        <Label Content="Математика. 6 класс." Margin="111,-24,111,270" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="27"/>
    </Grid>
</Page>
